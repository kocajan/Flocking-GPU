{
  "id": "initialSimulationState",
  "parameters": {
    "Simulation timing and control": [
      {
        "type": "number",
        "name": "dt",
        "label": "Time Step",
        "description": "Simulation time step (delta time)",
        "default": 0.016,
        "min": 0.001,
        "max": 0.1,
        "step": 0.001
      },
      {
        "type": "binary",
        "name": "paused",
        "label": "Paused",
        "description": "Pause the simulation",
        "default": false
      }
    ],

    "Simulation space": [
      {
        "type": "enum",
        "name": "dimensions",
        "label": "Dimensions",
        "description": "Simulation dimensionality",
        "default": "2D",
        "options": ["2D", "3D"]
      }
    ],

    "Initial population": [
      {
        "type": "number",
        "name": "basicBoidCount",
        "label": "Number of Basic Boids",
        "description": "Initial number of basic boids",
        "default": 1000,
        "min": 0,
        "max": 40000,
        "step": 50
      },
      {
        "type": "number",
        "name": "predatorBoidCount",
        "label": "Number of Predator Boids",
        "description": "Initial number of predator boids",
        "default": 0,
        "min": 0,
        "max": 10,
        "step": 1
      }
    ],

    "Mouse interaction behavior": [
      {
        "type": "enum",
        "name": "leftMouseEffect",
        "label": "Left Mouse Effect",
        "description": "Action triggered by left mouse button",
        "default": "Attract",
        "options": [
          "Spawn Predator",
          "Delete Predator",
          "Draw Obstacle",
          "Erase Obstacle",
          "Attract",
          "Repel"
        ]
      },
      {
        "type": "enum",
        "name": "rightMouseEffect",
        "label": "Right Mouse Effect",
        "description": "Action triggered by right mouse button",
        "default": "Repel",
        "options": [
          "Spawn Predator",
          "Delete Predator",
          "Draw Obstacle",
          "Erase Obstacle",
          "Attract",
          "Repel"
        ]
      }
    ],

    "World size": [
      {
        "type": "number",
        "name": "worldX",
        "label": "World X Size",
        "description": "World size in X dimension",
        "default": 3000,
        "min": 50,
        "max": 2000,
        "step": 10
      },
      {
        "type": "number",
        "name": "worldY",
        "label": "World Y Size",
        "description": "World size in Y dimension",
        "default": 1500,
        "min": 50,
        "max": 2000,
        "step": 10
      },
      {
        "type": "number",
        "name": "worldZ",
        "label": "World Z Size",
        "description": "World size in Z dimension (used in 3D mode)",
        "default": 1500,
        "min": 50,
        "max": 2000,
        "step": 10
      }
    ],

    "Simulation reset and maintenance": [
      {
        "type": "binary",
        "name": "deleteObstacles",
        "label": "Delete Obstacles",
        "description": "Delete obstacles in the simulation",
        "default": false
      },
      {
        "type": "binary",
        "name": "resetVersionSettings",
        "label": "Reset Version Settings",
        "description": "Reset version settings to default values",
        "default": false
      },
      {
        "type": "binary",
        "name": "resetSimulation",
        "label": "Reset Simulation",
        "description": "Reset simulation",
        "default": false
      }
    ],

    "Appearance and visualization": [
      {
        "type": "enum",
        "name": "basicBoidColor",
        "label": "Basic Boid Color",
        "description": "Color of basic boids",
        "default": "WHITE",
        "options": ["WHITE", "RED", "GREEN", "BLUE", "YELLOW"]
      },
      {
        "type": "enum",
        "name": "predatorBoidColor",
        "label": "Predator Boid Color",
        "description": "Color of predator boids",
        "default": "RED",
        "options": ["RED", "WHITE", "GREEN", "BLUE", "YELLOW"]
      },
      {
        "type": "enum",
        "name": "obstacleColor",
        "label": "Obstacle Color",
        "description": "Color of obstacles",
        "default": "GRAY",
        "options": ["GRAY", "BLACK", "BROWN", "DARKGREEN"]
      }
    ],

    "Boid and obstacle geometry": [
      {
        "type": "number",
        "name": "obstacleBoidRadius",
        "label": "Obstacle Boid Radius",
        "description": "Radius of obstacles drawn with mouse",
        "default": 15,
        "min": 1,
        "max": 100,
        "step": 1
      },
      {
        "type": "number",
        "name": "basicBoidRadius",
        "label": "Basic Boid Radius",
        "description": "Radius of basic boids",
        "default": 4,
        "min": 1,
        "max": 10,
        "step": 0.1
      },
      {
        "type": "number",
        "name": "predatorBoidRadius",
        "label": "Predator Boid Radius",
        "description": "Radius of predator boids",
        "default": 6,
        "min": 1,
        "max": 10,
        "step": 0.1
      }
    ],

    "Population and initialization limits": [
      {
        "type": "number",
        "name": "maxBoidPopulationChangeRate",
        "label": "Max Boid Population Change Rate",
        "description": "Maximum number of boids that can be spawned or removed per second",
        "default": 20,
        "min": 1,
        "max": 100,
        "step": 1
      },
      {
        "type": "number",
        "name": "initialAxialSpeedRange",
        "label": "Initial Axial Speed Range",
        "description": "Range for initial boid speeds along each axis",
        "default": 100,
        "min": 1,
        "max": 200,
        "step": 1
      },
      {
        "type": "number",
        "name": "eps",
        "label": "Epsilon",
        "description": "Small value to prevent division by zero",
        "default": 0.0001,
        "min": 0.00001,
        "max": 0.01,
        "step": 0.00001
      }
    ],

    "CUDA settings": [
      {
        "type": "number",
        "name": "cudaBlockSize",
        "label": "CUDA Block Size",
        "description": "Number of threads per block for CUDA kernels",
        "default": 256.0,
        "min": 32.0,
        "max": 1024.0,
        "step": 32.0
      }
    ]
  }
}
